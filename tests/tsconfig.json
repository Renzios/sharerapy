{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@types/jest", "node"],
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": ["../node_modules/@types", "./"]
  },
  "include": [
    "jest.d.ts",
    "**/*.test.ts",
    "**/*.spec.ts", 
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "jest/fixtures/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../.next",
    "../cypress",
    "../cypress.config.ts"
  ]
}
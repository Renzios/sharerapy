{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@types/jest", "@testing-library/jest-dom", "node"],
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "typeRoots": ["../../node_modules/@types", "./"]
  },
  "include": [
    "jest.d.ts",
    "**/*.test.ts",
    "**/*.spec.ts", 
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "fixtures/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../.next"
  ]
}